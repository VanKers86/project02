{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'My Blog &raquo; Authors &raquo; Detail &raquo; Blogposts' %}

{% block pageContent %}
	<p class="breadcrumb"><a href="{{ app.request.baseUrl }}/">Home</a> &raquo; <a href="{{ app.request.baseUrl }}/authors">Authors</a> &raquo; <a href="{{ app.request.baseUrl }}/authors/{{ author.id }}">{{ author.firstname }} {{ author.lastname }}</a> &raquo; Blogposts</p>

	<section class="authorblogposts">
		<h1>Blogposts by &ldquo;{{ author.firstname }} {{ author.lastname }}&rdquo;</h1>
		{% if blogposts %}
		<ul>
			{% for blogpost in blogposts %}
			<li><a href="{{ app.request.baseUrl }}/blog/{{ blogpost.id }}">{{ blogpost.title }}</a></li>
			{% endfor %}
		</ul>
		{% else %}
		<p>No blogposts to show!</p>
		{% endif %}
	</section>

	<p><a href="{{ app.request.baseUrl }}/authors/{{ author.id }}">&larr; Back to author detail</a></p>
{% endblock %}